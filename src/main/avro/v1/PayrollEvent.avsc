{
  "namespace": "io.skodjob.datagenerator.models.v1.payroll",
  "type": "record",
  "name": "PayrollEvent",
  "fields": [
    {
      "name": "schemaVersion",
      "type": "int",
      "default": 1
    },
    {
      "name": "event_id",
      "type": {
        "type": "string",
        "logicalType": "uuid"
      }
    },
    {
      "name": "source",
      "type": "string"
    },
    {
      "name": "ingested_ts",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      }
    },
    {
      "name": "employee_id",
      "type": "string"
    },
    {
      "name": "payroll_id",
      "type": {
        "type": "string",
        "logicalType": "uuid"
      }
    },
    {
      "name": "period_start",
      "type": {
        "type": "int",
        "logicalType": "date"
      }
    },
    {
      "name": "period_end",
      "type": {
        "type": "int",
        "logicalType": "date"
      }
