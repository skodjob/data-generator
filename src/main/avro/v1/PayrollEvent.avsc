            {
              "name": "amount",
              "type": {
                "type": "bytes",
                "logicalType": "decimal",
                "precision": 12,
                "scale": 2
              }
            }
          ]
        }
      }
    },
    {
      "name": "net_pay",
      "type": {
        "type": "bytes",
        "logicalType": "decimal",
        "precision": 12,
        "scale": 2
      }
    },
    {
      "name": "status",
      "type": {
        "type": "enum",
        "name": "PayrollStatus",
